{
  "name": "surmiser",
  "version": "0.0.1-alpha.9",
  "description": "The autocomplete primitive for the web. Add Smart Compose style predictive text to any input in minutes.",
  "keywords": [
    "autocomplete",
    "typeahead",
    "suggestion",
    "predictive-text",
    "smart-compose",
    "input",
    "react",
    "accessibility",
    "mobile",
    "typescript"
  ],
  "author": "Mohamed Hassan <mohamedhassan1998@gmail.com>",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "size": "size-limit"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 kB"
    },
    {
      "path": "dist/react.js",
      "limit": "10 kB"
    }
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.js",
      "types": "./dist/react.d.ts"
    },
    "./corpora": {
      "import": "./dist/corpora.js",
      "types": "./dist/corpora.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MohamedH1998/surmiser.git",
    "directory": "packages/surmiser"
  },
  "homepage": "https://github.com/MohamedH1998/surmiser#readme",
  "bugs": {
    "url": "https://github.com/MohamedH1998/surmiser/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.2",
    "@types/react": "^18.2.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "react": "^18.2.0",
    "size-limit": "^12.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.15"
  }
}
